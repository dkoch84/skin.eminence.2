<?xml version="1.0" encoding="UTF-8"?>
<!-- Custom Posters View - Cramming more posters on screen -->
<includes>
    <!-- CUSTOM POSTER VIEW - Modified BigIcon with FixedList -->
    <include name="Viewtype_Custom_Posters">
        <control type="group">
            <visible>Control.IsVisible(621)</visible>
            <left>bigpad</left>
            <right>bigpad</right>
            <top>bigpad</top>
            <height>posterh</height>
            <!-- <include>Object_Background</include> -->
            <control type="fixedlist" id="621">
                <top>30</top>
                <left>bigiconpanelpadw</left>
                <right>15</right>
                <visible>[Container.Content(movies) + [String.IsEqual(Skin.String(Skin.ForcedView.movies),$LOCALIZE[31244]) | String.IsEmpty(Skin.String(Skin.ForcedView.movies)) ]] | [Container.Content(sets) + [String.IsEqual(Skin.String(Skin.ForcedView.sets),$LOCALIZE[31244]) | String.IsEmpty(Skin.String(Skin.ForcedView.sets)) ]] | [Container.Content(tvshows) + [String.IsEqual(Skin.String(Skin.ForcedView.tvshows),$LOCALIZE[31244]) | String.IsEmpty(Skin.String(Skin.ForcedView.tvshows)) ]] | [Container.Content(seasons) + [String.IsEqual(Skin.String(Skin.ForcedView.seasons),$LOCALIZE[31244]) | String.IsEmpty(Skin.String(Skin.ForcedView.seasons)) ]] | [Container.Content(musicvideos) + [String.IsEqual(Skin.String(Skin.ForcedView.musicvideos),$LOCALIZE[31244]) | String.IsEmpty(Skin.String(Skin.ForcedView.musicvideos)) ]]</visible>
                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <ondown>61</ondown>
                <onback condition="!String.IsEmpty(Window(home).Property(HubReturn)) + String.IsEqual(Container.FolderPath,Window(home).Property(WindowBaseReturn))">AlarmClock(returnhack,ActivateWindow($INFO[Window(home).Property(HubReturn)]),00:00,silent)</onback>
                <onleft>621</onleft>
                <onright>621</onright>
                <focusposition>0</focusposition>
                <preloaditems>0</preloaditems>
                <pagecontrol>61</pagecontrol>
                <orientation>horizontal</orientation>
                <viewtype label="31244">bigicon</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout width="bigiconw" height="660">
                    <control type="group">
                        <top>0</top>
                        <left>15</left>
                        <right>15</right>
                        <height>bigiconh</height>

                        <control type="image">
                            <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                        </control>
                        <control type="group">
                            <right>-10</right>
                            <top>-10</top>
                            <include>Defs_WatchedOverlay</include>
                        </control>
                    </control>
                </itemlayout>

                <focusedlayout width="bigiconw" height="660">
                    <control type="group">
                        <top>0</top>
                        <left>15</left>
                        <right>15</right>
                        <height>bigiconh</height>

                        <control type="image">
                            <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                        </control>
                        <control type="group">
                            <right>-10</right>
                            <top>-10</top>
                            <include>Defs_WatchedOverlay</include>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="group">
                <top>30</top>
                <left>30</left>
                <width>440</width>
                <height>660</height>
                <control type="image">
                    <left>-10</left>
                    <right>-10</right>
                    <top>-10</top>
                    <bottom>-10</bottom>
                    <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                    <visible>Control.HasFocus(621)</visible>
                </control>
                <control type="image">
                    <texture colordiffuse="ff181818">common/white.png</texture>
                </control>
                <control type="image">
                    <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture background="true">$VAR[Image_Poster]</texture>
                    <visible>!Control.HasFocus(621)</visible>
                </control>
                <control type="group">
                    <right>-10</right>
                    <top>-10</top>
                    <visible>!Control.HasFocus(621)</visible>
                    <include>Defs_WatchedOverlay</include>
                </control>
                <control type="image">
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture background="true">$VAR[Image_Poster]</texture>
                    <fadetime>300</fadetime>
                    <visible>Control.HasFocus(621)</visible>
                </control>
                <control type="group">
                    <right>-10</right>
                    <top>-10</top>
                    <visible>Control.HasFocus(621)</visible>
                    <include>Defs_WatchedOverlay_Focus</include>
                </control>
            </control>
            <control type="group">
                <right>pad</right>
                <left>484</left>
                <top>bigiconh</top>
                <bottom>-30</bottom>
                <control type="grouplist">
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>6</itemgap>
                    <orientation>vertical</orientation>
                    <left>pad</left>
                    <right>pad</right>
                    <top>40</top>
                    <bottom>60</bottom>
                    <control type="textbox">
                        <top>pad</top>
                        <left>pad</left>
                        <right>pad</right>
                        <height>auto</height>
                        <align>left</align>
                        <font>Font-InfoBox-Title</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>

                    <control type="label">
                        <left>pad</left>
                        <right>pad</right>
                        <height>24</height>
                        <align>left</align>
                        <textcolor>$VAR[HighlightColor2]</textcolor>
                        <font>Font-ListInfo-Small-Bold</font>
                        <label>$VAR[Label_GenreLine,[UPPERCASE],[/UPPERCASE]]</label>
                    </control>
                    <control type="textbox">
                        <left>pad</left>
                        <right>pad</right>
                        <height>122</height>
                        <font>Font-ListInfo</font>
                        <align>left</align>
                        <label>$VAR[Label_Plot]</label>
                    </control>


                </control>
                <control type="label">
                    <top>109</top>
                    <left>30</left>
                    <right>bigpad</right>
                    <height>20</height>
                    <align>right</align>
                    <font>Font-ListInfo-Small-Bold</font>
                    <label>$VAR[Label_ExtraInfo_Icons]</label>
                    <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                </control>
            </control>
        </control>
    </include>

</includes>