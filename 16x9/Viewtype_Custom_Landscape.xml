<?xml version="1.0" encoding="UTF-8"?>
<!-- Custom Landscape Episode View - Maximizes space for episode previews/plot -->
<includes>

    <!-- CUSTOM LANDSCAPE EPISODE VIEW -->
    <include name="Viewtype_Custom_Landscape">
        <control type="group">
            <visible>Control.IsVisible(623)</visible>

            <control type="group">
                <height>780</height>
                <top>-30</top>
                <width>1790</width>
                <control type="group">
                    <include content="View_Custom_Landscape">
                        <param name="id" value="623" />
                        <param name="name" value="$LOCALIZE[31243]" />
                        <param name="condition" value="[Container.Content(movies) + [String.IsEqual(Skin.String(Skin.ForcedView.movies),$LOCALIZE[31243]) | String.IsEmpty(Skin.String(Skin.ForcedView.movies)) ]] | [Container.Content(sets) + [String.IsEqual(Skin.String(Skin.ForcedView.sets),$LOCALIZE[31243]) | String.IsEmpty(Skin.String(Skin.ForcedView.sets)) ]] | [Container.Content(tvshows) + [String.IsEqual(Skin.String(Skin.ForcedView.tvshows),$LOCALIZE[31243]) | String.IsEmpty(Skin.String(Skin.ForcedView.tvshows)) ]] | [Container.Content(episodes) + [String.IsEqual(Skin.String(Skin.ForcedView.episodes),$LOCALIZE[31243]) | String.IsEmpty(Skin.String(Skin.ForcedView.episodes)) ]] | [Container.Content(videos) + [String.IsEqual(Skin.String(Skin.ForcedView.videos),$LOCALIZE[31243]) | String.IsEmpty(Skin.String(Skin.ForcedView.videos)) ]] | [Container.Content(artists) + [String.IsEqual(Skin.String(Skin.ForcedView.artists),$LOCALIZE[31243]) | String.IsEmpty(Skin.String(Skin.ForcedView.artists)) ]]" />
                    </include>
                </control>
                <include>Object_Scrollbar_Horizontal</include>
            </control>
        </control>
    </include>

    <include name="View_Custom_Landscape">
        <param name="updownid" default="true" />
        <definition>
            <control type="fixedlist" id="$PARAM[id]">
                <pagecontrol>60</pagecontrol>
                <preloaditems>2</preloaditems>
                <orientation>horizontal</orientation>
                <onup condition="$PARAM[updownid]">$PARAM[id]</onup>
                <ondown condition="$PARAM[updownid]">$PARAM[id]</ondown>
                <onup condition="!$PARAM[updownid]">$PARAM[onup]</onup>
                <ondown condition="!$PARAM[updownid]">$PARAM[ondown]</ondown>
                <onright condition="!Skin.HasSetting(KioskMode)">SetFocus(9000)</onright>
                <onleft>60</onleft>
                <onback condition="!String.IsEmpty(Window(home).Property(HubReturn)) + String.IsEqual(Container.FolderPath,Window(home).Property(WindowBaseReturn))">AlarmClock(returnhack,ActivateWindow($INFO[Window(home).Property(HubReturn)]),00:00,silent)</onback>
                <viewtype label="$PARAM[name]">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <visible>$PARAM[condition]</visible>
                <itemlayout width="622" height="690">
                    <control type="group">
                        <left>pad</left>
                        <right>pad</right>
                        <top>pad</top>
                        <bottom>pad</bottom>
                        <include>Object_Background</include>
                        <control type="group">
                            <width>430</width>
                            <height>242</height>
                            <control type="image">
                                <aspectratio>keep</aspectratio>
                                <texture background="true">$VAR[Image_Thumb]</texture>
                            </control>
                        </control>
                        <control type="group">
                            <top>250</top>
                            <control type="label">
                                <top>20</top>
                                <left>30</left>
                                <right>70</right>
                                <height>36</height>
                                <textcolor>ListLabel</textcolor>
                                <font>Font-ListInfo-Smaller</font>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="textbox">
                                <top>70</top>
                                <left>30</left>
                                <right>30</right>
                                <height>400</height>
                                <font>Font-ListInfo-Small</font>
                                <align>left</align>
                                <autoscroll>false</autoscroll>
                                <textcolor>ListLabel</textcolor>
                                <label>$VAR[Label_ListPlot]</label>
                                <visible>Skin.HasSetting(furniture.showflags) + Skin.HasSetting(furniture.flags.extradetail)</visible>
                            </control>
                            <control type="textbox">
                                <top>70</top>
                                <left>30</left>
                                <right>30</right>
                                <height>400</height>
                                <font>Font-ListInfo-Small</font>
                                <align>left</align>
                                <autoscroll>false</autoscroll>
                                <textcolor>ListLabel</textcolor>
                                <label>$VAR[Label_Plot]</label>
                                <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                            </control>
                            <control type="label">
                                <top>500</top>
                                <left>30</left>
                                <right>30</right>
                                <height>20</height>
                                <align>center</align>
                                <textcolor>ListLabel</textcolor>
                                <font>Font-ListInfo-Smaller</font>
                                <label>$VAR[Label_ExtraInfo_Icons]</label>
                                <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                            </control>
                        </control>
                        <include>Defs_WatchedOverlay</include>
                    </control>
                </itemlayout>
                <focusedlayout width="622" height="690">
                    <control type="group">
                        <left>pad</left>
                        <right>pad</right>
                        <top>pad</top>
                        <bottom>pad</bottom>
                        <control type="image">
                            <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                        </control>
                        <control type="group">
                            <width>430</width>
                            <height>242</height>
                            <control type="image">
                                <aspectratio>keep</aspectratio>
                                <texture background="true">$VAR[Image_Thumb]</texture>
                            </control>
                        </control>
                        <control type="group">
                            <top>250</top>
                            <control type="label">
                                <top>20</top>
                                <left>30</left>
                                <right>70</right>
                                <height>36</height>
                                <textcolor>Selected</textcolor>
                                <font>Font-ListInfo-Smaller</font>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="textbox">
                                <top>70</top>
                                <left>30</left>
                                <right>30</right>
                                <height>400</height>
                                <font>Font-ListInfo-Small</font>
                                <align>left</align>
                                <autoscroll>false</autoscroll>
                                <textcolor>Selected</textcolor>
                                <label>$VAR[Label_ListPlot]</label>
                                <visible>Skin.HasSetting(furniture.showflags) + Skin.HasSetting(furniture.flags.extradetail)</visible>
                            </control>
                            <control type="textbox">
                                <top>70</top>
                                <left>30</left>
                                <right>30</right>
                                <height>400</height>
                                <font>Font-ListInfo-Small</font>
                                <align>left</align>
                                <autoscroll>false</autoscroll>
                                <textcolor>Selected</textcolor>
                                <label>$VAR[Label_Plot]</label>
                                <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                            </control>
                            <control type="label">
                                <top>500</top>
                                <left>30</left>
                                <right>30</right>
                                <height>20</height>
                                <align>center</align>
                                <textcolor>Selected</textcolor>
                                <font>Font-ListInfo-Smaller</font>
                                <label>$VAR[Label_ExtraInfo_Icons]</label>
                                <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                            </control>
                        </control>
                        <include>Defs_WatchedOverlay_Focus</include>
                    </control>
                </focusedlayout>
            </control>
        </definition>
    </include>

</includes>