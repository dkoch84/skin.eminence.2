<?xml version="1.0" encoding="UTF-8"?>
<!-- Custom Landscape View - Horizontal scrolling with landscape thumbs and plot -->
<includes>
    <include name="Viewtype_Custom_Landscape">
        <control type="group">
            <visible>Control.IsVisible(624)</visible>
            <control type="group">
                <height>780</height>
                <top>-30</top>
                <width>1790</width>
                <control type="group">
                    <control type="list" id="624">
                        <onup>624</onup>
                        <ondown>624</ondown>
                        <onup condition="!Skin.HasSetting(KioskMode)">SetFocus(9000)</onup>
                        <onback condition="!String.IsEmpty(Window(home).Property(HubReturn)) + String.IsEqual(Container.FolderPath,Window(home).Property(WindowBaseReturn))">AlarmClock(returnhack,ActivateWindow($INFO[Window(home).Property(HubReturn)]),00:00,silent)</onback>
                        <ondown>60</ondown>
                        <pagecontrol>60</pagecontrol>
                        <preloaditems>4</preloaditems>
                        <orientation>horizontal</orientation>
                        <viewtype label="31289">wide</viewtype>
                        <scrolltime tween="quadratic">430</scrolltime>
                        <visible>[Container.Content(movies) + [String.IsEqual(Skin.String(Skin.ForcedView.movies),$LOCALIZE[31289]) | String.IsEmpty(Skin.String(Skin.ForcedView.movies)) ]] | [Container.Content(sets) + [String.IsEqual(Skin.String(Skin.ForcedView.sets),$LOCALIZE[31289]) | String.IsEmpty(Skin.String(Skin.ForcedView.sets)) ]] | [Container.Content(tvshows) + [String.IsEqual(Skin.String(Skin.ForcedView.tvshows),$LOCALIZE[31289]) | String.IsEmpty(Skin.String(Skin.ForcedView.tvshows)) ]] | [Container.Content(episodes) + [String.IsEqual(Skin.String(Skin.ForcedView.episodes),$LOCALIZE[31289]) | String.IsEmpty(Skin.String(Skin.ForcedView.episodes)) ]] | [Container.Content(videos) + [String.IsEqual(Skin.String(Skin.ForcedView.videos),$LOCALIZE[31289]) | String.IsEmpty(Skin.String(Skin.ForcedView.videos)) ]] | [Container.Content(artists) + [String.IsEqual(Skin.String(Skin.ForcedView.artists),$LOCALIZE[31289]) | String.IsEmpty(Skin.String(Skin.ForcedView.artists)) ]]</visible>
                        <itemlayout height="770" width="450">
                            <control type="group">
                                <left>pad</left>
                                <right>pad</right>
                                <top>pad</top>
                                <bottom>pad</bottom>
                                <include>Object_Background</include>
                                <control type="group">
                                    <width>430</width>
                                    <height>242</height>
                                    <control type="image">
                                        <aspectratio>keep</aspectratio>
                                        <texture background="true">$VAR[Image_Thumb]</texture>
                                    </control>
                                </control>
                                <control type="group">
                                    <top>250</top>
                                    <control type="label">
                                        <top>20</top>
                                        <left>30</left>
                                        <right>70</right>
                                        <height>36</height>
                                        <textcolor>ListLabel</textcolor>
                                        <font>Font-ListInfo-Smaller</font>
                                        <label>$INFO[ListItem.Label]</label>
                                    </control>
                                    <control type="textbox">
                                        <top>70</top>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>400</height>
                                        <font>Font-ListInfo-Small</font>
                                        <align>left</align>
                                        <autoscroll>false</autoscroll>
                                        <textcolor>ListLabel</textcolor>
                                        <label>$VAR[Label_ListPlot]</label>
                                        <visible>Skin.HasSetting(furniture.showflags) + Skin.HasSetting(furniture.flags.extradetail)</visible>
                                    </control>
                                    <control type="textbox">
                                        <top>70</top>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>300</height>
                                        <font>Font-ListInfo-Small</font>
                                        <align>left</align>
                                        <autoscroll>false</autoscroll>
                                        <textcolor>ListLabel</textcolor>
                                        <label>$VAR[Label_ListPlot]</label>
                                        <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                                    </control>
                                    <control type="label">
                                        <bottom>25</bottom>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>20</height>
                                        <align>center</align>
                                        <textcolor>ListLabel</textcolor>
                                        <font>Font-ListInfo-Smaller</font>
                                        <label>$VAR[Label_ExtraInfo_Icons]</label>
                                        <visible>!Skin.HasSetting(furniture.showflags) | !Skin.HasSetting(furniture.flags.extradetail)</visible>
                                    </control>
                                    <control type="image">
                                        <right>20</right>
                                        <top>20</top>
                                        <height>32</height>
                                        <width>32</width>
                                        <texture colordiffuse="ListLabel">$VAR[Image_Indicator_List]</texture>
                                        <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                                    </control>
                                </control>
                            </control>
                        </itemlayout>
                        <focusedlayout height="770" width="450">
                            <control type="group">
                                <visible>!Control.HasFocus(624)</visible>
                                <left>pad</left>
                                <right>pad</right>
                                <top>pad</top>
                                <bottom>pad</bottom>
                                <include>Object_Background</include>
                                <control type="group">
                                    <width>430</width>
                                    <height>242</height>
                                    <control type="image">
                                        <aspectratio>keep</aspectratio>
                                        <texture background="true">$VAR[Image_Thumb]</texture>
                                    </control>
                                </control>
                                <control type="group">
                                    <top>250</top>
                                    <control type="label">
                                        <top>20</top>
                                        <left>30</left>
                                        <right>70</right>
                                        <height>36</height>
                                        <textcolor>ListLabel</textcolor>
                                        <font>Font-ListInfo-Smaller</font>
                                        <label>$INFO[ListItem.Label]</label>
                                    </control>
                                    <control type="textbox">
                                        <top>70</top>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>400</height>
                                        <font>Font-ListInfo-Small</font>
                                        <align>left</align>
                                        <autoscroll>false</autoscroll>
                                        <textcolor>ListLabel</textcolor>
                                        <label>$VAR[Label_ListPlot]</label>
                                    </control>
                                    <control type="label">
                                        <bottom>25</bottom>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>20</height>
                                        <align>center</align>
                                        <textcolor>ListLabel</textcolor>
                                        <font>Font-ListInfo-Smaller</font>
                                        <label>$VAR[Label_ExtraInfo_Icons]</label>
                                    </control>
                                </control>
                            </control>
                            <control type="group">
                                <visible>Control.HasFocus(624)</visible>
                                <left>pad</left>
                                <right>pad</right>
                                <top>pad</top>
                                <bottom>pad</bottom>
                                <include>Object_Background</include>
                                <control type="image">
                                    <texture colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                                </control>
                                <control type="group">
                                    <width>430</width>
                                    <height>242</height>
                                    <control type="image">
                                        <aspectratio>keep</aspectratio>
                                        <texture background="true">$VAR[Image_Thumb]</texture>
                                    </control>
                                </control>
                                <control type="group">
                                    <top>250</top>
                                    <control type="label">
                                        <top>20</top>
                                        <left>30</left>
                                        <right>70</right>
                                        <height>36</height>
                                        <textcolor>$VAR[HighlightColor2]</textcolor>
                                        <font>Font-ListInfo-Smaller</font>
                                        <label>$INFO[ListItem.Label]</label>
                                    </control>
                                    <control type="textbox">
                                        <top>70</top>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>400</height>
                                        <font>Font-ListInfo-Small</font>
                                        <align>left</align>
                                        <textcolor>Selected</textcolor>
                                        <label>$VAR[Label_ListPlot]</label>
                                    </control>
                                    <control type="label">
                                        <bottom>25</bottom>
                                        <left>30</left>
                                        <right>30</right>
                                        <height>20</height>
                                        <align>center</align>
                                        <textcolor>Selected</textcolor>
                                        <font>Font-ListInfo-Smaller</font>
                                        <label>$VAR[Label_ExtraInfo_Icons]</label>
                                    </control>
                                    <control type="image">
                                        <right>20</right>
                                        <top>20</top>
                                        <height>32</height>
                                        <width>32</width>
                                        <texture colordiffuse="Selected">$VAR[Image_Indicator_List]</texture>
                                        <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                                    </control>
                                </control>
                            </control>
                        </focusedlayout>
                    </control>
                </control>
                <include>Object_Scrollbar_Horizontal</include>
            </control>
        </control>
    </include>
</includes>
