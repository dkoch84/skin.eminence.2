<?xml version="1.0" encoding="UTF-8"?>
<!-- Custom Artists Icons View - Wall of album covers -->
<includes>

    <!-- CUSTOM ARTISTS ICON VIEW -->
    <include name="Viewtype_Custom_Artists">
        <control type="group">
            <visible>Control.IsVisible(622)</visible>
            <control type="group">
                <left>bigpad</left>
                <right>bigpad</right>
                <top>10</top>
                <height>posterh</height>
                <include content="View_Custom_Artists">
                    <param name="id" value="622" />
                    <param name="name" value="31284" />
                    <param name="condition" value="[Container.Content(movies) + [String.IsEqual(Skin.String(Skin.ForcedView.movies),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.movies)) ]] | [Container.Content(sets) + [String.IsEqual(Skin.String(Skin.ForcedView.sets),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.sets)) ]] | [Container.Content(tvshows) + [String.IsEqual(Skin.String(Skin.ForcedView.tvshows),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.tvshows)) ]] | [Container.Content(seasons) + [String.IsEqual(Skin.String(Skin.ForcedView.seasons),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.seasons)) ]] | [Container.Content(episodes) + [String.IsEqual(Skin.String(Skin.ForcedView.episodes),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.episodes)) ]] | [Container.Content(artists) + [String.IsEqual(Skin.String(Skin.ForcedView.artists),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.artists)) ]] | [Container.Content(albums) + [String.IsEqual(Skin.String(Skin.ForcedView.albums),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.albums)) ]] | [Container.Content(images) + [String.IsEqual(Skin.String(Skin.ForcedView.images),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.images)) ]] | [Container.Content(addons) + [String.IsEqual(Skin.String(Skin.ForcedView.addons),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.addons)) ]] | [Container.Content(genres) + [String.IsEqual(Skin.String(Skin.ForcedView.genres),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.genres)) ]] | [Container.Content(years) + [String.IsEqual(Skin.String(Skin.ForcedView.years),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.years)) ]] | [Container.Content(tags) + [String.IsEqual(Skin.String(Skin.ForcedView.tags),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.tags)) ]] | [Container.Content(studios) + [String.IsEqual(Skin.String(Skin.ForcedView.studios),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.studios)) ]] | [Container.Content(files) + [String.IsEqual(Skin.String(Skin.ForcedView.files),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.files)) ]] | [Container.Content(countries) + [String.IsEqual(Skin.String(Skin.ForcedView.countries),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.countries)) ]] | [Container.Content(directors) + [String.IsEqual(Skin.String(Skin.ForcedView.directors),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.directors)) ]] | [Container.Content(actors) + [String.IsEqual(Skin.String(Skin.ForcedView.actors),$LOCALIZE[31284]) | String.IsEmpty(Skin.String(Skin.ForcedView.actors)) ]]" />
                </include>

                <include>Object_Arrows_Vertical</include>
            </control>
        </control>
    </include>

    <include name="View_Custom_Artists">
        <param name="updownid" default="true" />
        <param name="width" default="headlinew" />
        <param name="iconitemw" default="iconitemw" />
        <param name="icongenreitemw" default="icongenreitemw" />
        <param name="iconpadw" default="iconpadw" />
        <param name="iconpanelpadw" default="iconpanelpadw" />
        <param name="height" default="690" />
        <param name="orientation" default="vertical" />
        <param name="genres" default="false" />
        <definition>
            <control type="panel" id="$PARAM[id]">
                <top>-60</top>
                <left>20</left>
                <right>0</right>
                <width>1900</width>
                <height>870</height>
                <onfocus condition="Window.IsVisible(1131)">SetProperty(list_focus,$PARAM[id],Home)</onfocus>
                <onup condition="$PARAM[updownid]">$PARAM[id]</onup>
                <ondown condition="$PARAM[updownid]">$PARAM[id]</ondown>
                <onup condition="!$PARAM[updownid]">$PARAM[onup]</onup>
                <ondown condition="!$PARAM[updownid]">$PARAM[ondown]</ondown>
                <onright condition="!Skin.HasSetting(KioskMode)">SetFocus(9000)</onright>
                <onleft>60</onleft>
                <onback condition="!String.IsEmpty(Window(home).Property(HubReturn)) + String.IsEqual(Container.FolderPath,Window(home).Property(WindowBaseReturn))">AlarmClock(returnhack,ActivateWindow($INFO[Window(home).Property(HubReturn)]),00:00,silent)</onback>
                <pagecontrol>60</pagecontrol>
                <preloaditems>6</preloaditems>
                <orientation>$PARAM[orientation]</orientation>
                <viewtype label="$PARAM[name]">icons</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <visible>$PARAM[condition]</visible>
                <itemlayout height="245" width="$PARAM[iconitemw]" condition="![Container.Content(genres) | Container.Content(years) | Container.Content(tags) | Container.Content(studios) | Container.Content(countries) | Container.Content(directors)]">
                    <control type="group">
                        <left>$PARAM[iconpadw]</left>
                        <right>$PARAM[iconpadw]</right>
                        <bottom>5</bottom>
                        <top>5</top>
                        <control type="group">
                            <left>0</left>
                            <right>0</right>
                            <top>0</top>
                            <bottom>0</bottom>
                            <control type="image">
                                <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                                <aspectratio aligny="center">keep</aspectratio>
                                <texture background="true" fallback="DefaultFile.png">$VAR[Image_Poster]</texture>
                                <visible>String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))</visible>
                                <visible>!$PARAM[genres]</visible>
                            </control>
                            <control type="image">
                                <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                                <aspectratio aligny="center">scale</aspectratio>
                                <width>260</width>
                                <height>260</height>
                                <texture background="true" colordiffuse="00ffffff">common/white.png</texture>
                                <visible>String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))</visible>
                                <visible>$PARAM[genres]</visible>
                            </control>
                            <control type="image">
                                <top>50</top>
                                <left>50</left>
                                <width>110</width>
                                <height>110</height>
                                <aspectratio aligny="center">keep</aspectratio>
                                <texture background="true" fallback="DefaultFile.png">$VAR[Image_Poster_Genres]</texture>
                                <visible>String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))</visible>
                                <visible>$PARAM[genres]</visible>
                            </control>
                        </control>
                        <control type="group">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <control type="image">

                                <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include>
                                <aspectratio>scale</aspectratio>
                                <texture background="true">$VAR[Image_Poster]</texture>
                                <visible>![String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))]</visible>
                            </control>
                        </control>
                        <include>Defs_WatchedOverlay</include>
                    </control>
                </itemlayout>
                <itemlayout height="5" width="$PARAM[icongenreitemw]" condition="[Container.Content(genres) | Container.Content(years) | Container.Content(tags) | Container.Content(studios) | Container.Content(countries) | Container.Content(directors)]">
                    <control type="group">
                        <left>$PARAM[iconpadw]</left>
                        <right>$PARAM[iconpadw]</right>
                        <bottom>5</bottom>
                        <top>5</top>
                        <control type="group">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <control type="image">
                                <!-- <include condition="!Skin.HasSetting(global.hideobjectshadows) + !String.IsEqual(Skin.CurrentColourTheme,Light)">Object_Background_Shadows</include> -->
                                <aspectratio aligny="center">scale</aspectratio>
                                <texture background="true" colordiffuse="PosterBorder">common/white.png</texture>
                            </control>
                            <control type="label">
                                <label>$INFO[ListItem.Label]</label>
                                <align>center</align>
                                <left>pad</left>
                                <right>pad</right>
                            </control>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="245" width="$PARAM[iconitemw]" condition="![Container.Content(genres) | Container.Content(years) | Container.Content(tags) | Container.Content(studios) | Container.Content(countries) | Container.Content(directors)]">
                    <control type="group">
                        <left>$PARAM[iconpadw]</left>
                        <right>$PARAM[iconpadw]</right>
                        <bottom>5</bottom>
                        <top>5</top>
                        <control type="group">
                            <left>0</left>
                            <right>0</right>
                            <top>0</top>
                            <bottom>0</bottom>
                            <control type="image">
                                <left>-10</left>
                                <right>-10</right>
                                <top>-10</top>
                                <bottom>-10</bottom>
                                <bordersize>10</bordersize>
                                <bordertexture colordiffuse="$VAR[HighlightColor]" border="10">common/border.png</bordertexture>
                                <aspectratio aligny="center">keep</aspectratio>
                                <texture background="true" fallback="DefaultFile.png">$VAR[Image_Poster]</texture>
                                <visible>String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))</visible>
                                <visible>!$PARAM[genres]</visible>
                                </control>
                                <control type="image">
                                    <left>-10</left>
                                    <right>-10</right>
                                    <top>-20</top>
                                    <bottom>-10</bottom>
                                    <bordersize>10</bordersize>
                                    <bordertexture colordiffuse="$VAR[HighlightColor]" border="10">common/border.png</bordertexture>
                                    <aspectratio aligny="center">keep</aspectratio>
                                    <texture background="true" colordiffuse="00ffffff" fallback="DefaultFile.png">common/white.png</texture>
                                    <visible>String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))</visible>
                                    <visible>$PARAM[genres]</visible>
                                </control>
                                <control type="image">
                                    <top>50</top>
                                    <left>50</left>
                                    <width>110</width>
                                    <height>110</height>
                                    <aspectratio aligny="center">keep</aspectratio>
                                    <texture background="true" fallback="DefaultFile.png">$VAR[Image_Poster_Genres]</texture>
                                    <visible>String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))</visible>
                                    <visible>$PARAM[genres]</visible>
                                </control>

                        </control>
                        <control type="image">
                            <bordersize>10</bordersize>
                            <bordertexture colordiffuse="$VAR[HighlightColor]" border="5">common/border.png</bordertexture>
                            <aspectratio>scale</aspectratio>
                            <texture background="true">$VAR[Image_Poster]</texture>
                            <visible>![String.IsEmpty(ListItem.Art(tvshow.poster)) + String.IsEmpty(ListItem.Art(poster))]</visible>
                        </control>
                        <include>Defs_WatchedOverlay_Focus</include>
                    </control>
                </focusedlayout>
                <focusedlayout height="115" width="$PARAM[icongenreitemw]" condition="[Container.Content(genres) | Container.Content(years) | Container.Content(tags) | Container.Content(studios) | Container.Content(countries) | Container.Content(directors)]">
                    <control type="group">
                        <left>$PARAM[iconpadw]</left>
                        <right>$PARAM[iconpadw]</right>
                        <bottom>5</bottom>
                        <top>5</top>
                        <control type="group">
                            <left>pad</left>
                            <right>pad</right>
                            <top>pad</top>
                            <bottom>pad</bottom>
                            <control type="image">
                                <texture background="true" colordiffuse="$VAR[HighlightColor]">common/white.png</texture>
                            </control>
                            <control type="label">
                                <label>$INFO[ListItem.Label]</label>
                                <align>center</align>
                                <left>pad</left>
                                <right>pad</right>
                                <textcolor>Selected</textcolor>
                            </control>
                        </control>
                    </control>
                </focusedlayout>
                <include content="$PARAM[include_name]">
                    <param name="include_target" value="$PARAM[include_target]" />
                    <param name="include_content" value="$PARAM[include_content]" />
                </include>
            </control>
        </definition>
    </include>

</includes>